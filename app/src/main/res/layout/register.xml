<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/register_account"
        android:layout_width="240dp"
        android:layout_height="52dp"
        android:layout_marginRight="86dp"
        android:text="계좌등록하기"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginEnd="86dp" />

    <TextView
        android:id="@+id/financial_institution"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="26dp"
        android:text="@string/financial_institution"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/register_account"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/account_number"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="26dp"
        android:text="@string/account_number"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/register_account"
        app:layout_constraintLeft_toRightOf="@+id/financial_institution"
        android:layout_marginLeft="162dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="395dp"
        android:layout_height="66dp"
        android:layout_marginTop="469dp"
        android:text="@string/add"
        app:layout_constraintTop_toBottomOf="@+id/register_account"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
